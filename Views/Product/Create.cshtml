@model ProductInventory.Models.ProductModel

@{
    ViewData["Title"] = "商品登録";
}

<link rel="stylesheet" href="~/css/Product-create.css" />

<div class="edit-container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="ProductCode">商品コード</label>
            <input asp-for="ProductCode" class="form-control" />
            <span asp-validation-for="ProductCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductName">商品名</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UnitPrice">価格</label>
            <input asp-for="UnitPrice" class="form-control" step="1" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn-save">登録</button>
            <a asp-action="Index" class="btn-cancel">戻る</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
